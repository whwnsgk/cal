<script>



$(function(){
  alert("반가워! 오랜만이야");
})
var expression = "";
	//유효성 검사1
 	function onlyCalculator() {
	  
	}
	//유효성검사2
	function lastcheck(){
	
		var check = onlyCalculator();
		alert(check);
			if (check == true) {
				compute();
			} else {
				alert("다른걸 입력하셨소");
			}
	}

	

	//마우스 클릭시 발동
	function add(character) {
		expression = expression + character;
		$("#enter").val(expression);
	}

	//키보드 입력시 발동
	function keyBoard() {
		let value = $("#enter").val();
		expression = value;
		$("#enter").val(expression);
	}

	//에이작으로 보내기
	function compute() {
		$.ajax({
			url : "calculator.cl",
			data : {
				infix : expression
			},
			success : function(result) {
				console.log("통신성공");
				$("#enter").val(result);

			},
			error : function() {
				console.log("통신실패");
			}
		})
	}

	function clearDisplay() {
		expression = "";
		document.getElementById("enter").value = "0";
	}
</script>

